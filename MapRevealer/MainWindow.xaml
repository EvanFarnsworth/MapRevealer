<Window
    x:Class="MapRevealer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:comp="clr-namespace:MapRevealer.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MapRevealer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <comp:ZoomBorder
            x:Name="ImageZoomBorder"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TransformChanged="ImageZoomBorder_TransformChanged">
            <Image
                x:Name="MapDisplay"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsEnabled="True"
                Source="{Binding DisplayImage}"
                Stretch="Uniform" />
        </comp:ZoomBorder>
    </Grid>
</Window>
